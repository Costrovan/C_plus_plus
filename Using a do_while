#include<iostream>
using namespace std;

int main()
{
    // Declare the variable
    int num;
    cout << "insert any value from 0 to 5";
    cin >> num;

    // use a do while loop execution
    do
    {
        cout << "value of number: " << num << endl;
        num++;
        if (num > 5)
        {
            // stop the loop
            break;
        }
    } while (num < 10);
// will display only up to 5 because that is where the "break" is located
    return 0;
}
